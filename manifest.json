{
  "manifest_version": 3,
  "name": "OpenID Connect Helper",
  "version": "0.1.0",
  "description": "Automate the OpenID Connect playground",
  "permissions": ["clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["https://openidconnect.net/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 